  <h1 class="info">Pembayaran Listrik Bulanan Anda</h1>
  <main class="table">
      <div class="profile">
        <div class="image">
          <img src="../image/profile.png" alt="profile">
        </div>
        <div class="text">
          <table>
            <% dataUser.forEach((data,i) =>{i++ %>
              <tr>
                <td>ID Pelanggan</td>
                <td>:</td>
                <td><%= data.id_pelanggan %></td>
              </tr>
              <tr>
                <td>Alamat</td>
                <td>:</td>
                <td><%= data.alamat %></td>
              </tr>
              <tr>
                <td>Kota</td>
                <td>:</td>
                <td><%= data.kota %></td>
              </tr>
            <tr >
              <td>Provinsi</td>
              <td>:</td>
              <td><%= data.provinsi %></td>
            </tr>
            <%})  %> 
          </table>
        </div>
      </div>
      <div class="table_body">
        <table>
          <thead>
            <tr>
              <th>No</th>
              <th>Total Penggunaan kWh</th>
              <th>Total Pembayaran</th>
              <th>Deadline Pembayaran</th>
              <th>Status Pembayaran</th>
            </tr>
          </thead>
          <tbody>
            <% if (dataKwhUser && dataKwhUser.length > 0) { %>
            <% dataKwhUser.forEach((data, i) => { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= data.gap_kwh%></td>
                <td>
                  <strong>Rp <%= data.total_price.toLocaleString('id-ID') %></strong>
                </td>
                <td><%= data.deadline %></td>
                <td>
                  <p class="status <%= data.status ? 'paid' : 'unpaid' %>"><%= data.status ? 'Sudah Diabayar' : 'Belum Dibayar' %></p>
                </td>
              </tr>
            <% }) %>
            <% } else { %>
              <tr>
                  <td colspan="5">Tidak ada data</td>
              </tr>
          <% } %>
          </tbody>
        </table>
      </div>
      <input type="submit" class="logout-button" value="Logout" id="logout">
      <!-- <button class="logout-button" onclick="logout()">Logout</button> -->
  </main>
  
  <div class="footer">
    <img src="../image/footer.png" alt="footer">
  </div>

